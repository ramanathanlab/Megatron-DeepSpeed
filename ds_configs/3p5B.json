{
    "train_micro_batch_size_per_gpu": 8,
    "gradient_accumulation_steps": 8,
    "steps_per_print": 1,
    "wall_clock_breakdown" : true,
    "zero_force_ds_cpu_optimizer": false,
    "zero_optimization": {
        "stage": 1,
        "allgather_partitions": true,
        "reduce_scatter": true,
        "allgather_bucket_size": 5e8,
        "overlap_comm": true,
        "contiguous_gradients": true
    },
    "scheduler": {
        "type": "WarmupLR",
        "params": {
            "warmup_min_lr": 0,
            "warmup_max_lr": 0.001,
            "warmup_num_steps": 1000
        }
    },
    "fp16": {
        "enabled": false,
        "initial_scale_power": 12
    },
    "bf16": {
        "enabled": true
    },
    "flops_profiler": {
        "enabled": true,
        "profile_step": 1,
        "module_depth": -1,
        "top_modules": 3,
        "detailed": true,
        "output_file": null
    },
    "timers": {
      "throughput": {
        "enabled": true,
        "synchronized": true
      }
    },
    "comms_logger": {
        "enabled": true,
        "verbose": false,
        "prof_all": false,
        "debug": false
    }
}
